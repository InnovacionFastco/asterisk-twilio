# Docker Compose override variables for the Asterisk + Twilio lab
# Copy this file to .env and adjust values before running docker compose up

# Networking
# Public IP o FQDN que Twilio utilizar√° para llegar al servidor.
PUBLIC_ADDRESS=changeme
SIP_PORT_UDP=5060
SIP_PORT_TCP=5060
SIP_PORT_TLS=5061
RTP_PORT_RANGE=10000-10100

# Image / container naming
ASTERISK_IMAGE_NAME=asterisk-twilio:latest
ASTERISK_CONTAINER_NAME=asterisk-twilio

# Twilio SIP trunk credentials (replace with your own secure values)
TWILIO_SIP_DOMAIN=sip.us1.twilio.com
TWILIO_SIP_USER=changeme
TWILIO_SIP_PASSWORD=changeme
TWILIO_DID=+10000000000

# HTTP server / ARI
HTTP_BIND_ADDRESS=0.0.0.0
HTTP_PORT=8088
HTTP_PREFIX=
ARI_ALLOWED_ORIGINS=*
ARI_USERNAME=changeme
ARI_PASSWORD=changeme
